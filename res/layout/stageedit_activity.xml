<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:stretchColumns="2">
	    <TextView
	        android:id="@+id/tv_goalTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="25sp"
	        android:layout_gravity="center"
	        android:textStyle="bold"/>
	<TableRow> 
	    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_stageName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/stage_name" />
	
	    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_Name"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text" >
	
	        <requestFocus />
	    </EditText>
	</TableRow>
	<TableRow> 
	    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_stageContent"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/stage_content" />
	</TableRow>
	    <EditText
	        android:id="@+id/et_Content"
	        style="@style/et_dark"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dip"
	        android:ems="10"
	        android:inputType="text|textMultiLine"
	        android:shadowRadius="3.0" 
	        android:text="@string/smart_word">
	    </EditText>
	<TableRow android:id="@+id/tr_stageValue"> 
		    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_stageValue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/stage_value" />
		    
		    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_stageValue"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text" >
	    </EditText>
	</TableRow>
	
    
	<TableRow> 
		    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_investTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/invest_time" />
		    
		    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_investTime"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text" >
	    </EditText>
	</TableRow>
	
	<TableRow> 
		    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_startTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/start_time" />
		    
		    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_startTime"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text" >
	    </EditText>
	</TableRow>
	
	<TableRow> 
		    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_deadline"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/deadline" />
		    
		    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_deadline"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text" >
	    </EditText>
	</TableRow>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="horizontal" >

		<Button
		    android:id="@+id/btn_done"
			style="@style/btn_dark"
			android:layout_weight="1"
			android:layout_marginLeft="5dip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/done_edit" />
		
		<Button
		    android:id="@+id/btn_next"
			style="@style/btn_dark"
			android:layout_weight="1"
			android:layout_marginRight="5dip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dip"
		    android:text="@string/next_stage" />
	  
	</LinearLayout>
</TableLayout>