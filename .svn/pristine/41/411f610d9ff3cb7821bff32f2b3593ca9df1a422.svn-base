<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true" android:drawable="@drawable/textfield_multiline_focused_holo_dark">
		<shape android:shape="rectangle">
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="8dp" />
		</shape>
	</item>
	<item android:state_focused="false" android:drawable="@drawable/textfield_bg_default_holo_dark">
		<shape android:shape="rectangle">

		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="8dp" />
		</shape>
	</item>
</selector>