<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:stretchColumns="2">
    
	<TableRow> 
	    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_targetName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/target_name" />
	
	    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_Name"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text" >
	
	        <requestFocus />
	    </EditText>
    </TableRow>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	    <TextView
	        android:id="@+id/tv_targetContent"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/target_content" />
	
	    <EditText
	        android:id="@+id/et_Content"
	        style="@style/et_dark"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dip"
	        android:ems="10"
	        android:inputType="text|textMultiLine"
	        android:shadowRadius="3.0" 
	        android:text="@string/smart_word">
	    </EditText>
	</LinearLayout>
    <TableRow android:id="@+id/tr_goalType"> 
		 <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_Quantifiable"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/quantifiable" />
		<RadioGroup
	        android:layout_column="2"
	        android:id="@+id/rg_quantifiable"
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
			<RadioButton
			     android:id="@+id/rb_yes"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="@string/str_yes"/>
			<RadioButton
			     android:id="@+id/rb_no"
			     android:checked="true"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="@string/str_no"/>
    	</RadioGroup>
   	</TableRow> 
	<TableRow android:id="@+id/tr_targetValue"> 
	    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_targetvalue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/target_value" />
		    
		    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_targetvalue"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text">
	        </EditText>
	</TableRow> 
	<TableRow>
		    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_startTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/start_time" />
		    
		    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_startTime"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text" >
	    </EditText>
	</TableRow>
	<TableRow>
		    <TextView
	        android:layout_column="1"
	        android:id="@+id/tv_FinishTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/deadline" />
		    
		    <EditText
	        android:layout_column="2"
	        android:id="@+id/et_finishTime"
	        style="@style/et_dark"
	        android:layout_marginLeft="5dip"
	        android:shadowRadius="3.0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="text" >
	    </EditText>
	</TableRow>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="horizontal" >

		<Button
		    android:id="@+id/btn_save"
			style="@style/btn_dark"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/done_edit" />
	  
	</LinearLayout>
</TableLayout>